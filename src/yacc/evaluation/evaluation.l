/* lex program for evaluation of expression */
%{
    #include <stdio.h>
    #include <stdlib.h>
    #include <string.h>
    /* Generated by yacc */
    #include "y.tab.h"
%}
INTEGER    [0-9]+

/* lex definations */
%%
exit.*          {return exit_command;}
quit.*          {return exit_command;}
{INTEGER}       {yylval.val = atoi(yytext); return number;}
[+-/*()]        {return yytext[0];}
\n              {return newline;}
[ \t]		    ;
.               {ECHO; yyerror("Unexpected Character");}
%%

int yywrap() {
	return 1;
}